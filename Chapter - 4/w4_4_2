/*Display four patterns using loops*/

#include <iostream>
using namespace std;
int main()
{
    int i,j,k;
    cout<<"Pattern B"<<endl;
    for(i=0;i<=4;i++)
    {
        for(k=0;k<=3-i;k++)
        {
            cout<<" ";
        }


        for(j=0;j<=(i*2);j++)
        {
          cout<<(j+1);

        }
      cout<<"\n";



    }







}
