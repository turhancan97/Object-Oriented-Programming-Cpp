/*Display four patterns using loops*/

#include <iostream>
using namespace std;
int main()
{
    int i,j,k,l,m;
    cout<<"Pattern C"<<endl;

    for(i=0;i<=4;i++)
    {
        for(k=0;k<=1-i;k++)
        {
            cout<<" ";

        }
            if(i>2)
            {
                for(m=0;m<=i-3;m++)
                    {
                      cout<<" ";
                    }


            }
        if(i<=2)
        {
            for(l=0;l<=i;l++)
            {
                cout<<"3";
            }
        }
        else
        {

            for(l=i;l<=4;l++)
            {

                cout<<"3";
            }



        }


      cout<<"\n";



    }







}
