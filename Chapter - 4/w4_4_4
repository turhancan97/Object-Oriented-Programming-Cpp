/*Display four patterns using loops*/

#include <iostream>
using namespace std;
int main()
{
    int i, j, k, N;

    N = 6;

    for(i=1; i<=N; i++)
    {
        for(k=0;k<=5-i;k++)
        {
            printf(" ");
        }
        // Prints first part of pattern
        for(j=1; j<=i; j++)
        {
            printf("%d", j);
        }

        // Prints spaces between two parts
        for(j=i*2; j<N*2; j++)
        {
            printf(" ");
        }



        printf("\n");
    }




}
