/*Display four patterns using loops*/

#include <iostream>
using namespace std;
int main()
{
    int i,j;
    cout<<"Pattern A"<<endl;
    for(i=0;i<=5;i++)

    {
        for(j=0;j<=5;j++)
        {
            if((i==0)||(i==5))
            {
                cout<<(j+1);
            }
            else
            {
                if((j==0)||(j==5))
                {
                    cout<<j+1;
                }
                else
                {
                    cout<<" ";
                }
            }

        }
        cout<<"\n";



    }







}
